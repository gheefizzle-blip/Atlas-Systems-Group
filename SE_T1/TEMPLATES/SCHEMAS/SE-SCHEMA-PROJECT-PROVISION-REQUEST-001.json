{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "SE/SCHEMA/PROJECT_PROVISION_REQUEST/001",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request_id",
    "requested_by",
    "project_id",
    "client_slug",
    "project_name",
    "engagement_type",
    "classification",
    "db_mode",
    "template_set",
    "nas_roots",
    "options"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 8
    },
    "requested_by": {
      "type": "string",
      "minLength": 2
    },
    "project_id": {
      "type": "string",
      "pattern": "^PRJ-[A-Z0-9]+-[0-9]{4}-[0-9]{4}$"
    },
    "client_slug": {
      "type": "string",
      "pattern": "^[A-Z0-9]+$"
    },
    "project_name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "engagement_type": {
      "type": "string",
      "enum": [
        "hardware",
        "software",
        "hybrid",
        "advisory",
        "audit",
        "product_dev"
      ]
    },
    "classification": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "risk_class",
        "data_sensitivity",
        "regulatory_domains",
        "client_audit_rights"
      ],
      "properties": {
        "risk_class": {
          "type": "string",
          "enum": [
            "LOW",
            "MEDIUM",
            "HIGH",
            "CRITICAL"
          ]
        },
        "data_sensitivity": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "INTERNAL",
            "CONFIDENTIAL",
            "RESTRICTED"
          ]
        },
        "regulatory_domains": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "client_audit_rights": {
          "type": "string",
          "enum": [
            "YES",
            "NO"
          ]
        }
      }
    },
    "db_mode": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "postgres_instance"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "SCHEMA_PER_PROJECT",
            "DB_PER_PROJECT"
          ]
        },
        "postgres_instance": {
          "type": "string"
        }
      }
    },
    "template_set": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ctx_template_path",
        "pri_template_path",
        "manifest_template_path"
      ],
      "properties": {
        "ctx_template_path": {
          "type": "string",
          "minLength": 10
        },
        "pri_template_path": {
          "type": "string",
          "minLength": 10
        },
        "manifest_template_path": {
          "type": "string",
          "minLength": 10
        }
      }
    },
    "nas_roots": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "platform_root",
        "projects_root"
      ],
      "properties": {
        "platform_root": {
          "type": "string",
          "minLength": 6
        },
        "projects_root": {
          "type": "string",
          "minLength": 6
        }
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "create_project_role",
        "enable_indexer",
        "initial_retention_policy",
        "tags"
      ],
      "properties": {
        "create_project_role": {
          "type": "boolean"
        },
        "enable_indexer": {
          "type": "boolean"
        },
        "initial_retention_policy": {
          "type": "string",
          "enum": [
            "STANDARD",
            "TIGHT",
            "CUSTOM"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "validated_by_agent_r": {
          "type": "boolean",
          "description": "Must be true when risk_class is HIGH or CRITICAL"
        }
      }
    }
  }
}
